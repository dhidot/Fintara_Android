<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo, Selamat Datang di Fintara!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Banner -->
        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_platinum"
            android:background="@drawable/bg_rounded_blue"
            android:contentDescription="Promo Banner"
            android:layout_marginBottom="20dp" />

        <!-- PINJAMAN AKTIF -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPinjamanAktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvJudulPinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinjaman Aktif"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvNominalPinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 10.000.000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvStatusTenor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disetujui â€¢ 12 bulan"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tvCicilanBulanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cicilan: Rp 900.000 / bulan"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLihatDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Detail"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SIMULASI PINJAMAN -->
        <TextView
            android:text="Simulasi Pinjaman"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan jumlah pinjaman"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerTenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimulate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulasikan" />

        <!-- Hasil simulasi -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimasi cicilan: Rp0 / bulan"
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- CTA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAjukanSekarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajukan Sekarang"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary" />

    </LinearLayout>
</ScrollView>
